// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String    @id @default(auto()) @map("_id") @db.ObjectId
  email           String    @unique
  name            String?
  password        String?   // Hashed password
  phoneNumber     String?
  role            String    @default("USER") // "USER" or "ADMIN"
  isEmailVerified Boolean   @default(false)
  address         String?
  city            String?
  state           String?
  pincode         String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt
  otps            Otp[]
  cart            Cart?
  orders          Order[]
  reviews         Review[]
}

model Otp {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  email     String
  code      String   // 6-digit code
  type      String   // "SIGNUP" or "FORGOT_PASSWORD"
  expiresAt DateTime
  createdAt DateTime  @default(now())
  user      User?     @relation(fields: [email], references: [email], onDelete: Cascade)

  @@index([email, type])
  @@map("otps")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  category    String
  itemCode    String   @unique
  weight      String
  mrp         Float
  salePrice   Float
  gst         Float
  hsnCode     String
  image       String?  // Cloudinary URL
  images      String[] // Multiple images
  description String?
  inStock     Boolean  @default(true)
  rating      Float    @default(0)
  reviewCount Int      @default(0)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  orderItems  OrderItem[]
  cartItems   CartItem[]
  reviews     Review[]
}

model Review {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  rating    Int      // 1-5
  comment   String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Cart {
  id        String     @id @default(auto()) @map("_id") @db.ObjectId
  userId    String     @unique @db.ObjectId
  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  items     CartItem[]
  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
}

model CartItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  cartId    String   @db.ObjectId
  cart      Cart     @relation(fields: [cartId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id], onDelete: Cascade)
  quantity  Int      @default(1)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Order {
  id               String      @id @default(auto()) @map("_id") @db.ObjectId
  userId           String      @db.ObjectId
  user             User        @relation(fields: [userId], references: [id])
  items            OrderItem[]
  totalAmount      Float
  subtotal         Float?      // Before GST
  gstAmount        Float?      // GST amount
  deliveryCharge   Float?      @default(0)
  status           String      @default("pending") // pending, confirmed, processing, shipped, out_for_delivery, delivered, cancelled
  paymentStatus    String      @default("pending") // pending, paid, failed, refunded
  paymentId        String?     // Razorpay payment ID
  razorpayOrderId  String?
  shippingAddress  String
  trackingNumber   String?     // Courier tracking number
  courierName      String?     // Courier company name
  shippedAt        DateTime?   // When order was shipped
  expectedDelivery DateTime?   // Expected delivery date
  deliveredAt      DateTime?   // Actual delivery date
  cancelledAt      DateTime?   // When order was cancelled (audit/compliance)
  adminNotes       String?     // Internal notes for admin
  refundRequested  Boolean     @default(false)
  refundRequestedAt DateTime?  // When customer requested refund
  refundReason     String?    // defective, wrong_item, damaged_in_transit, changed_mind, quality_issue, other
  refundReasonOther String?    // Free text when reason is "other"
  refundComment    String?    // Optional customer comment
  refundStatus     String?    // requested, approved, rejected, refunded
  refundProcessedAt DateTime? // When admin processed (approved/rejected/refunded)
  refundAdminNotes String?    // Internal admin notes
  refundRejectionReason String? // Shown to customer when rejected
  createdAt        DateTime    @default(now())
  updatedAt        DateTime    @updatedAt
}

model OrderItem {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  orderId   String   @db.ObjectId
  order     Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
  productId String   @db.ObjectId
  product   Product  @relation(fields: [productId], references: [id])
  quantity  Int
  price     Float
  createdAt DateTime @default(now())
}

model HeroSection {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  buttonText  String
  buttonLink  String
  image       String?  // Optional image URL
  icon        String?  // Icon name for fallback
  order       Int      @default(0)
  isActive    Boolean  @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model SiteSettings {
  id                    String   @id @default(auto()) @map("_id") @db.ObjectId
  key                   String   @unique
  value                 String   // JSON string for complex values
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
}

model GalleryMedia {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  url       String   // Cloudinary URL for image or video
  type      String   // "image" or "video"
  caption   String?
  order     Int      @default(0) // Display order (lower = first)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
